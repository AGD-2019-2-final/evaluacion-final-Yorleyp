--
-- Carga el archivo desde el disco duro
--
u = LOAD 'data.csv' USING PigStorage(',')
    AS (id:CHARARRAY,
        nombre:CHARARRAY,
        apellido:CHARARRAY,
        fecha: CHARARRAY,
        color: CHARARRAY,
        valor: INT);
--DUMP u;

--
v = FILTER u BY (color matches 'b.*');
--DUMP v;

--
w = FOREACH v GENERATE color;
--DUMP w;

STORE w INTO 'output';

